<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.panneer.photopickmultiple.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/choose_picture_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Picture"/>

        <Button
            android:id="@+id/show_selected_picture_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show User Selected Picture"/>

        <ImageView
            android:id="@+id/selected_picture_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
